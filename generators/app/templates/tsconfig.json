{
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"allowJs": true,
		"strict": true,
		"strictNullChecks": false,
		"strictPropertyInitialization": false,
		"rootDir": "./",
		"types": ["<%= tstypes %>", "@types/jquery", "@types/qunit"],
		"paths": {
			"<%= libURI %>/*": ["./src/<%= libURI %>/*"]
		}
	},
	"include": ["./src/**/*", "./test/**/*"]
}
