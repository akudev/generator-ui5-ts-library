{
	"name": "<%= libId %>",
	"version": "1.0.0",
	"description": "UI5 Library: <%= libId %>",
	"author": "<%= author %>",
	"license": "Apache-2.0",
	"types": "dist/index.d.ts",
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "npm run build:ts-interfaces && ui5 build --clean-dest",
		"build:ts-interfaces": "npx @ui5/ts-interface-generator",
		"start": "run-p 'build:ts-interfaces -- --watch' start:server",
		"start:server": "ui5 serve --port 8080 -o test-resources/<%= libURI %>/Example.html",
		"start:dist": "ui5 serve  --port 8080 -o test-resources/<%= libURI %>/Example.html --config ui5-dist.yaml",
		"testsuite": "ui5 serve --open test-resources/<%= libURI %>/qunit/testsuite.qunit.html",
		"ts-typecheck": "tsc --noEmit",
		"lint": "eslint src test",
		"karma": "karma start",
		"karma-ci": "karma start karma-ci.conf.js",
		"karma-ci-cov": "karma start karma-ci-cov.conf.js",
		"test": "npm run lint && npm run karma-ci-cov"
	},
	"devDependencies": {
		"<%= tstypes %>": "<%= tstypesVersion %>",
		"@types/qunit": "^2.19.6",
		"@typescript-eslint/eslint-plugin": "^5.59.11",
		"@typescript-eslint/parser": "^5.59.11",
		"@ui5/cli": "^3.2.0",
		"@ui5/ts-interface-generator": "^0.6.3",
		"eslint": "^8.43.0",
		"karma": "^6.4.2",
		"karma-chrome-launcher": "^3.2.0",
		"karma-coverage": "^2.2.0",
		"karma-ui5": "^3.0.3",
		"karma-ui5-transpile": "^0.3.17",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.1",
		"typescript": "^5.1.3",
		"ui5-middleware-livereload": "^0.8.3",
		"ui5-tooling-transpile": "^0.7.12"
	}
}
